{
  "manifest_version": 3,

  "name": "Maple",
  "description": "News Validator",
  "version": "1.0",

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab", "scripting"
  ],

  "content_scripts": [
    {
      "matches": ["https://*.nytimes.com/*"],
      "js": ["content-script.js"]
    }
  ]
}